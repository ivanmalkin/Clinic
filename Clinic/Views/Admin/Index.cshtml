@model IEnumerable<Service>

@{
    ViewBag.Title = "Все услуги";
    Layout = "_Layout";
}

@if (Model.Count() == 0)
{
    <div class="text-center m-2">
        <form asp-action="SeedDatabase" method="post">
            <button type="submit" class="btn btn-danger">Заполнить базу данных</button>
        </form>
    </div>
}
else
{
    <h3>Редактирование услуг на сайте</h3>
    <table class="table table-striped table-bordered table-sm">
        <tr>
            <th class="text-right">ID</th>
            <th>Название</th>
            <th class="text-right">Цена</th>
            <th class="text-center">Действия</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-right">@item.ServiceId</td>
                <td>@item.Name</td>
                <td class="text-right">@item.Price.ToString("c")</td>
                <td class="text-center">
                    <form asp-action="Delete" method="post">
                        <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-serviceId="@item.ServiceId">Редактировать</a>
                        <input type="hidden" name="ServiceId" value="@item.ServiceId" />
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </table>
}

<div>
    <a asp-action="Create" class="btn btn-primary">Добавить услугу</a>
</div>