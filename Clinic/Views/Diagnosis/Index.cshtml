@model IEnumerable<Diagnosis>

@{
    ViewBag.Title = "Все диагнозы";
    Layout = "_Layout";
}

<h3>Редактирование диагнозов на сайте</h3>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Название</th>
        <th>Описание</th>
        <th>Категория</th>
        <th class="text-center">Действия</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.DiagnosisId</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Category</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-diagnosisId="@item.DiagnosisId">Редактировать</a>
                    <input type="hidden" name="DiagnosisId" value="@item.DiagnosisId" />
                    <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Добавить диагноз</a>
</div>