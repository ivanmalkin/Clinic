@model IEnumerable<Appointment>

@{
    ViewBag.Title = "Все заявки";
    Layout = "_Layout";
}

<h3>Редактирование заявок на сайте</h3>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Пациент</th>
        <th>Дата</th>
        <th>Диагноз</th>
        <th class="text-right">Цена</th>
        <th class="text-center">Действия</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.AppointmentId</td>
            <td>@item.PatientId</td>
            <td>@item.AppointmentPlaced</td>
            <td>@item.DiagnosisId</td>
            <td class="text-right">@item.TotalSum.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-appointmentId="@item.AppointmentId">Редактировать</a>
                    <input type="hidden" name="AppointmentId" value="@item.AppointmentId" />
                </form>
            </td>
        </tr>
    }
</table>