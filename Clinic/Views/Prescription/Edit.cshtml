@model Prescription
@{
    ViewBag.Title = "Редактировать рецепт";
    Layout = "_Layout";
}

<h3>Редактирование рецепта</h3>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PrescriptionId" />

    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Meds">Препараты</label>
        <div><span asp-validation-for="Meds" class="text-danger"></span></div>
        <input asp-for="Meds" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PatientName">Имя пациента</label>
        <div><span asp-validation-for="PatientName" class="text-danger"></span></div>
        <input asp-for="PatientName" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Сохранить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>