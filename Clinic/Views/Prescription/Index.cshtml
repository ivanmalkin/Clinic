@model IEnumerable<Prescription>

@{
    ViewBag.Title = "Все рецепты";
    Layout = "_Layout";
}

<h3>Редактирование рецептов на сайте</h3>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Дата</th>
        <th>Описание</th>
        <th>Препараты</th>
        <th>Пациент</th>
        <th class="text-center">Действия</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td class="text-right">@item.PrescriptionId</td>
            <td>@item.PrescriptionDate</td>
            <td>@item.Description</td>
            <td>@item.Meds</td>
            <td>@item.PatientName</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-prescriptionId="@item.PrescriptionId">Редактировать</a>
                    <input type="hidden" name="PrescriptionId" value="@item.PrescriptionId" />
                </form>
            </td>
        </tr>
    }
</table>

<div>
    <a asp-action="Create" class="btn btn-primary">Добавить рецепт</a>
</div>